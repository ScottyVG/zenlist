<h2 class="text-center section-title" data-animation="fadeInDown" data-animation-delay="900" data-out-animation="fadeOutUp" data-out-animation-delay="100">Create Lists</h2>

<form action="/lists" method="post">
   <div class="form-group">
       <label for="title" class="col-sm-2 control-label">Title</label>
       <div class="col-sm-10">
           <input type="text" class="form-control" name="title" placeholder="Title">
       </div>
   </div>
   <div class="form-group">
       <label for="description" class="col-sm-2 control-label">Description</label>
       <div class="col-sm-10">
           <input type="text" class="form-control" name="description" placeholder="Description">
       </div>
   </div>
   <div class="form-group">
       <label for="priorityLevel" class="col-sm-2 control-label">Priority Level</label>
       <div class="col-sm-10">
           <input type="range" name="priorityLevel" min="0" max="10">
       </div>
   </div>
   <div class="form-group">
       <div class="col-sm-offset-2 col-sm-10">
           <button type="submit" class="btn btn-default">Create List</button>
       </div>
   </div>
</form>
