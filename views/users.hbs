  </div><!-- .header-box -->

    <main>
        <!--Main layout-->
        <div class="container">

            <!--Page heading-->
            <div class="row">
                <div class="col-md-12">
                    <h1 class="h1-responsive">{{{USER}}} PROFILE
                      <br>
                        <small class="text-muted">Create your Checklists!</small>
                    </h1>
